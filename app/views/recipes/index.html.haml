.recipes.bg-grey
  .center
    %h1 Recipes
    %p= link_to 'New Recipe', new_recipe_path

  #recipe-list#recipe-list
    .recipe-card
      - @recipes.each do |recipe|
        .recipes
          .empty
            .recipe-card
              .max-w-md.min-w-20
                .h-48.lg:h-auto.lg:w-48.flex-none.bg-cover.rounded-t.lg:rounded-t-none.lg:rounded-l.text-center.overflow-hidden{style: "background-image: url('')"}
                .border-r.border-b.border-l.border-grey-light.lg:border-l-0.lg:border-t.lg:border-grey-light.bg-white.rounded-b.lg:rounded-b-none.lg:rounded-r.p-4.flex.flex-col.justify-between.leading-normal
                  .mb-8
                  %h3= link_to recipe.title, recipe_path(recipe)
                  %p= recipe.description
                  %p
                    Posted by:
                    = mail_to recipe.user.email
